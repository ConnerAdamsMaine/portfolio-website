		"format": "prettier --check .",
		"format:write": "prettier --write .",
		"db:seed": "tsx scripts/seed-db.ts",
		"test": "echo \"No tests specified\""
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "^5.5.2",
