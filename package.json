		"tailwindcss": "^3.4.17",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vite": "^7.3.1"
	},
	"dependencies": {
		"better-sqlite3": "^12.6.2",
		"gsap": "^3.14.2",
		"svelte-motion": "^0.12.2",
		"ws": "^8.19.0"
